<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<div class="container">
  <div class="row">
    <h3>Captured Pokemon</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @my_pokemons.each do |pokemon| %>
            <tr> 
              <% if pokemon.ndex %>
    		    <td> <%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") %> </td>
  			  <% end %>
            </tr>
            <tr>
              <td> <%= pokemon.name %> </td>
              <td> <%= pokemon.level %> </td>
              <td> <%= pokemon.health %> </td>
              <td> <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
            </tr>
            <tr>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
